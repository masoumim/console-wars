                        <div class="col d-flex justify-content-center">
                            <table>
                                <tr>
                                    <td>Rank</td>
                                    <td class="system1Rank"><%=system1Rank%></td>
                                    <td><i class="system1RankArrow"></i></td>
                                </tr>
                                <tr>
                                    <td>Manufacturer</td>
                                    <td><%=system1Manufacturer.name%></td>
                                </tr>
                                <tr>
                                    <td>Release Year</td>
                                    <td><%=system1.release_year%></td>
                                </tr>
                                <tr>
                                    <td>Discontinued Year</td>
                                    <td><%=system1.discontinue_year%></td>
                                </tr>
                                <tr>
                                    <td>Lifespan (years)</td>
                                    <td class="system1Lifespan"><% if (system1.discontinue_year > 0){%><%=system1.discontinue_year - system1.release_year%><%}%></td>
                                    <td><i class="system1LifespanArrow"></i></td>
                                </tr>
